rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check ownership
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Helper function to get current user's data
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    // Helper function to check if user is part of an organization
    function isOrganizationMember(organizationId) {
      return getUserData() != null && 
             getUserData().organizationId == organizationId;
    }

    // Helper function to check if user can access data (owner or organization member)
    function canAccessData(userId, organizationId) {
      return isOwner(userId) || 
             (organizationId != null && isOrganizationMember(organizationId));
    }

    // Helper function to check if user has admin role
    function isAdmin() {
      return getUserData() != null && getUserData().role == 'admin';
    }

    // Helper function to check if user has accountant role
    function isAccountant() {
      return getUserData() != null && getUserData().role == 'accountant';
    }

    // Helper function to check if user has sales role
    function isSales() {
      return getUserData() != null && getUserData().role == 'sales';
    }

    // Helper function to check if user has viewer role
    function isViewer() {
      return getUserData() != null && getUserData().role == 'viewer';
    }

    // Helper function to check role permissions
    function hasRolePermission(permission) {
      return getUserData() != null && 
             (
               // Admin has all permissions
               isAdmin() ||
               // Read permission: all roles can read
               (permission == 'read' && (isAdmin() || isAccountant() || isSales() || isViewer())) ||
               // Create permission: admin, accountant, sales
               (permission == 'create' && (isAdmin() || isAccountant() || isSales())) ||
               // Update permission: admin, accountant, sales
               (permission == 'update' && (isAdmin() || isAccountant() || isSales())) ||
               // Delete permission: admin only
               (permission == 'delete' && isAdmin()) ||
               // Accounting permission: admin, accountant, viewer
               (permission == 'accounting' && (isAdmin() || isAccountant() || isViewer())) ||
               // Billing permission: all roles
               (permission == 'billing' && (isAdmin() || isAccountant() || isSales() || isViewer())) ||
               // Settings permission: admin only
               (permission == 'settings' && isAdmin())
             );
    }

    // Helper function to check client-specific access
    function canAccessClientData(clientId) {
      return getUserData() != null && 
             (getUserData().clientId == null || getUserData().clientId == clientId);
    }

    // NOTE: Production rules are now more restrictive
    // Uncomment below only for local testing/development
    // match /{document=**} {
    //   allow read, write: if true;
    // }

    // Users can only read and write their own user document
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }

    // All users can read company info, professionals, and blogs
    match /companyInfo/{docId} {
      allow read: if request.auth != null;
    }
    match /professionals/{docId} {
      allow read: if request.auth != null;
    }
    
    // Professional Profiles Collection (new collection for professional profiles)
    // Public read access for browsing professionals (server-side API routes don't have auth context)
    match /professionals_profiles/{docId} {
      // Allow public read access (for API routes and client-side browsing)
      // Server-side API routes don't have request.auth context
      allow read: if true;
      // Users can create/update their own profile
      allow create, update: if request.auth != null && 
                               request.resource.data.userId == request.auth.uid;
      // Only admins can delete profiles
      allow delete: if request.auth != null && 
                       (isAdmin() || request.auth.uid == 'SUPER_ADMIN_UID');
    }
    match /blog/{docId} {
        allow read: if request.auth != null;
    }

    // Public blog posts - anyone can read (public blog)
    match /blogPosts/{docId} {
      allow read, write: if true;  // Temporary: allow all operations for debugging
    }

    // Users can read/write their own documents OR organization documents (if member)
    // Role-based permissions are enforced
    match /journalVouchers/{docId} {
      allow read: if request.auth != null && 
                     (isOwner(resource.data.userId) || 
                      (resource.data.organizationId != null && 
                       isOrganizationMember(resource.data.organizationId) &&
                       hasRolePermission('accounting')));
      allow create: if request.auth != null && 
                       (isOwner(request.resource.data.userId) || 
                        (request.resource.data.organizationId != null && 
                         isOrganizationMember(request.resource.data.organizationId) &&
                         hasRolePermission('create') &&
                         hasRolePermission('accounting')));
      allow update: if request.auth != null && 
                       (isOwner(resource.data.userId) || 
                        (resource.data.organizationId != null && 
                         isOrganizationMember(resource.data.organizationId) &&
                         hasRolePermission('update') &&
                         hasRolePermission('accounting')));
      allow delete: if request.auth != null && 
                       (isOwner(resource.data.userId) || 
                        (resource.data.organizationId != null && 
                         isOrganizationMember(resource.data.organizationId) &&
                         hasRolePermission('delete')));
    }
    match /customers/{docId} {
      allow read: if request.auth != null && 
                     (isOwner(resource.data.userId) || 
                      (resource.data.organizationId != null && 
                       isOrganizationMember(resource.data.organizationId) &&
                       hasRolePermission('read')));
      allow create: if request.auth != null && 
                       (isOwner(request.resource.data.userId) || 
                        (request.resource.data.organizationId != null && 
                         isOrganizationMember(request.resource.data.organizationId) &&
                         hasRolePermission('create')));
      allow update: if request.auth != null && 
                       (isOwner(resource.data.userId) || 
                        (resource.data.organizationId != null && 
                         isOrganizationMember(resource.data.organizationId) &&
                         hasRolePermission('update')));
      allow delete: if request.auth != null && 
                       (isOwner(resource.data.userId) || 
                        (resource.data.organizationId != null && 
                         isOrganizationMember(resource.data.organizationId) &&
                         hasRolePermission('delete')));
    }
    match /vendors/{docId} {
      allow read: if request.auth != null && 
                     (isOwner(resource.data.userId) || 
                      (resource.data.organizationId != null && 
                       isOrganizationMember(resource.data.organizationId) &&
                       hasRolePermission('read')));
      allow create: if request.auth != null && 
                       (isOwner(request.resource.data.userId) || 
                        (request.resource.data.organizationId != null && 
                         isOrganizationMember(request.resource.data.organizationId) &&
                         hasRolePermission('create')));
      allow update: if request.auth != null && 
                       (isOwner(resource.data.userId) || 
                        (resource.data.organizationId != null && 
                         isOrganizationMember(resource.data.organizationId) &&
                         hasRolePermission('update')));
      allow delete: if request.auth != null && 
                       (isOwner(resource.data.userId) || 
                        (resource.data.organizationId != null && 
                         isOrganizationMember(resource.data.organizationId) &&
                         hasRolePermission('delete')));
    }
    match /stockItems/{docId} {
      allow read: if request.auth != null && 
                     (isOwner(resource.data.userId) || 
                      (resource.data.organizationId != null && 
                       isOrganizationMember(resource.data.organizationId) &&
                       hasRolePermission('read')));
      allow create: if request.auth != null && 
                       (isOwner(request.resource.data.userId) || 
                        (request.resource.data.organizationId != null && 
                         isOrganizationMember(request.resource.data.organizationId) &&
                         hasRolePermission('create')));
      allow update: if request.auth != null && 
                       (isOwner(resource.data.userId) || 
                        (resource.data.organizationId != null && 
                         isOrganizationMember(resource.data.organizationId) &&
                         hasRolePermission('update')));
      allow delete: if request.auth != null && 
                       (isOwner(resource.data.userId) || 
                        (resource.data.organizationId != null && 
                         isOrganizationMember(resource.data.organizationId) &&
                         hasRolePermission('delete')));
    }
    match /settings/{docId} {
      allow read: if request.auth != null && 
                     (isOwner(resource.data.userId) || 
                      (resource.data.organizationId != null && 
                       isOrganizationMember(resource.data.organizationId) &&
                       hasRolePermission('read')));
      allow create: if request.auth != null && 
                       (isOwner(request.resource.data.userId) || 
                        (request.resource.data.organizationId != null && 
                         isOrganizationMember(request.resource.data.organizationId) &&
                         hasRolePermission('settings')));
      allow update: if request.auth != null && 
                       (isOwner(resource.data.userId) || 
                        (resource.data.organizationId != null && 
                         isOrganizationMember(resource.data.organizationId) &&
                         hasRolePermission('settings')));
      allow delete: if request.auth != null && 
                       (isOwner(resource.data.userId) || 
                        (resource.data.organizationId != null && 
                         isOrganizationMember(resource.data.organizationId) &&
                         hasRolePermission('delete')));
    }
    match /sales-orders/{docId} {
      allow read: if request.auth != null && 
                     (isOwner(resource.data.userId) || 
                      (resource.data.organizationId != null && 
                       isOrganizationMember(resource.data.organizationId) &&
                       hasRolePermission('read')));
      allow create: if request.auth != null && 
                       (isOwner(request.resource.data.userId) || 
                        (request.resource.data.organizationId != null && 
                         isOrganizationMember(request.resource.data.organizationId) &&
                         hasRolePermission('create') &&
                         hasRolePermission('billing')));
      allow update: if request.auth != null && 
                       (isOwner(resource.data.userId) || 
                        (resource.data.organizationId != null && 
                         isOrganizationMember(resource.data.organizationId) &&
                         hasRolePermission('update') &&
                         hasRolePermission('billing')));
      allow delete: if request.auth != null && 
                       (isOwner(resource.data.userId) || 
                        (resource.data.organizationId != null && 
                         isOrganizationMember(resource.data.organizationId) &&
                         hasRolePermission('delete')));
    }

    // Document Vault Collections
    match /vaultDocuments/{documentId} {
      allow read, update, delete: if isOwner(resource.data.userId);
      allow create: if isOwner(request.resource.data.userId);
    }

    match /vaultShareCodes/{shareCodeId} {
      allow read, update, delete: if isOwner(resource.data.userId);
      allow create: if isOwner(request.resource.data.userId);
      // Note: Public code validation will be handled server-side via API route
    }

    match /vaultAccessLogs/{logId} {
      allow read: if isOwner(resource.data.userId);
      allow create: if request.resource.data.userId != null;
    }

    match /vaultNotifications/{notificationId} {
      allow read, update, delete: if isOwner(resource.data.userId);
      allow create: if request.resource.data.userId != null;
    }

    // General Notifications Collection
    // Users can read/update/delete their own notifications
    // Any authenticated user can create notifications (system notifications, vault access alerts, etc.)
    match /notifications/{notificationId} {
      allow read, update, delete: if request.auth != null && 
                                     isOwner(resource.data.userId);
      // Allow any authenticated user to create notifications
      // This is needed for system notifications, vault access alerts, etc.
      // The userId in the notification determines who receives it
      allow create: if request.auth != null && 
                       request.resource.data.userId != null;
    }

    match /vaultSettings/{userId} {
      allow read, update: if isOwner(userId);
      allow create: if isOwner(userId);
    }

    // Rate limiting collection (IP-based, server-side only)
    // Note: API routes will handle this server-side
    match /vaultRateLimits/{ip} {
      allow read, write: if false; // Server-side only via API routes
    }

    // Knowledge Exchange Collections (ICAI-Compliant: Education-only)
    // Only professionals can read published posts
    match /knowledge_posts/{postId} {
      allow read: if request.auth != null && 
                     (resource.data.status == 'PUBLISHED' || 
                      request.auth.uid == resource.data.authorId ||
                      request.auth.uid == 'SUPER_ADMIN_UID'); // Admin can see all
      allow create: if request.auth != null && 
                       request.resource.data.authorId == request.auth.uid &&
                       request.resource.data.complianceDeclarationAccepted == true;
      // Allow updates for author/admin, OR allow updating only helpfulCount and updatedAt fields for reactions
      allow update: if request.auth != null && 
                       (request.auth.uid == resource.data.authorId ||
                        request.auth.uid == 'SUPER_ADMIN_UID' ||
                        // Allow any authenticated user to update helpfulCount (for reactions)
                        (request.resource.data.keys().hasAll(['helpfulCount', 'updatedAt']) &&
                         request.resource.data.keys().size() == resource.data.keys().size() &&
                         request.resource.data.helpfulCount is int));
      allow delete: if request.auth != null && 
                       (request.auth.uid == resource.data.authorId ||
                        request.auth.uid == 'SUPER_ADMIN_UID');
    }

    match /knowledge_reactions/{reactionId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && 
                       request.resource.data.userId == request.auth.uid;
      allow delete: if request.auth != null && 
                       resource.data.userId == request.auth.uid;
    }

    match /knowledge_saves/{saveId} {
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && 
                       request.resource.data.userId == request.auth.uid;
      allow delete: if request.auth != null && 
                       resource.data.userId == request.auth.uid;
    }

    match /knowledge_reports/{reportId} {
      allow read: if request.auth != null && 
                     (resource.data.reportedByUserId == request.auth.uid ||
                      request.auth.uid == 'SUPER_ADMIN_UID'); // Admin can see all
      allow create: if request.auth != null && 
                       request.resource.data.reportedByUserId == request.auth.uid;
      allow update: if request.auth.uid == 'SUPER_ADMIN_UID'; // Only admin can review reports
    }

    // Professional Clients Collection
    // Professionals can manage their own clients
    match /professional_clients/{clientId} {
      allow read, update, delete: if request.auth != null && 
                                     resource.data.professionalId == request.auth.uid;
      allow create: if request.auth != null && 
                       request.resource.data.professionalId == request.auth.uid;
    }

    // Tasks & Collaboration Collections
    // Tasks Posts - users can read their own tasks and tasks they're assigned to
    match /tasks_posts/{taskId} {
      allow read: if request.auth != null && 
                     (resource.data.postedBy == request.auth.uid ||
                      resource.data.assignedTo == request.auth.uid ||
                      resource.data.status == 'open'); // Anyone can read open tasks
      allow create: if request.auth != null && 
                       request.resource.data.postedBy == request.auth.uid;
      allow update: if request.auth != null && 
                       (resource.data.postedBy == request.auth.uid ||
                        resource.data.assignedTo == request.auth.uid);
      allow delete: if request.auth != null && 
                       resource.data.postedBy == request.auth.uid;
    }

    // Collaboration Requests (new collection name)
    match /collaboration_requests/{requestId} {
      allow read: if request.auth != null && 
                     (resource.data.requestedByFirmId == request.auth.uid ||
                      resource.data.visibility == 'firm-network' ||
                      resource.data.status == 'open');
      allow create: if request.auth != null && 
                       request.resource.data.requestedByFirmId == request.auth.uid;
      allow update: if request.auth != null && 
                       (resource.data.requestedByFirmId == request.auth.uid ||
                        resource.data.assignedToFirmId == request.auth.uid);
      allow delete: if request.auth != null && 
                       resource.data.requestedByFirmId == request.auth.uid;
    }

    // Tasks Applications - users can read their own applications
    match /tasks_applications/{applicationId} {
      allow read: if request.auth != null && 
                     (resource.data.applicantId == request.auth.uid ||
                      resource.data.taskPostedBy == request.auth.uid);
      allow create: if request.auth != null && 
                       request.resource.data.applicantId == request.auth.uid;
      allow update: if request.auth != null && 
                       (resource.data.applicantId == request.auth.uid ||
                        resource.data.taskPostedBy == request.auth.uid);
      allow delete: if request.auth != null && 
                       resource.data.applicantId == request.auth.uid;
    }

    // Collaboration Invites (new collection name)
    match /collaboration_invites/{inviteId} {
      allow read: if request.auth != null && 
                     (resource.data.invitedFirmId == request.auth.uid ||
                      resource.data.requestedByFirmId == request.auth.uid);
      allow create: if request.auth != null && 
                       request.resource.data.requestedByFirmId == request.auth.uid;
      allow update: if request.auth != null && 
                       (resource.data.invitedFirmId == request.auth.uid ||
                        resource.data.requestedByFirmId == request.auth.uid);
      allow delete: if request.auth != null && 
                       (resource.data.invitedFirmId == request.auth.uid ||
                        resource.data.requestedByFirmId == request.auth.uid);
    }

    // Tasks Chats - users can read chats for tasks they're involved in
    match /tasks_chats/{chatId} {
      allow read: if request.auth != null && 
                     (resource.data.fromUserId == request.auth.uid ||
                      resource.data.toUserId == request.auth.uid);
      allow create: if request.auth != null && 
                       request.resource.data.fromUserId == request.auth.uid;
      allow update, delete: if request.auth != null && 
                                resource.data.fromUserId == request.auth.uid;
    }

    // Collaboration Chats (new collection name)
    match /collaboration_chats/{chatId} {
      allow read: if request.auth != null && 
                     (resource.data.fromFirmId == request.auth.uid ||
                      resource.data.toFirmId == request.auth.uid);
      allow create: if request.auth != null && 
                       request.resource.data.fromFirmId == request.auth.uid;
      allow update, delete: if request.auth != null && 
                                resource.data.fromFirmId == request.auth.uid;
    }

    // Tasks Reviews / Internal Quality Feedback
    match /tasks_reviews/{reviewId} {
      allow read: if request.auth != null && 
                     (resource.data.reviewerId == request.auth.uid ||
                      resource.data.professionalId == request.auth.uid);
      allow create: if request.auth != null && 
                       request.resource.data.reviewerId == request.auth.uid;
      allow update, delete: if request.auth != null && 
                                resource.data.reviewerId == request.auth.uid;
    }

    match /internal_quality_feedback/{feedbackId} {
      allow read: if request.auth != null && 
                     (resource.data.givenByFirmId == request.auth.uid ||
                      resource.data.receivedByFirmId == request.auth.uid);
      allow create: if request.auth != null && 
                       request.resource.data.givenByFirmId == request.auth.uid;
      allow update, delete: if request.auth != null && 
                                resource.data.givenByFirmId == request.auth.uid;
    }

    // User Invites Collection
    // Users can create invites where they are the inviter
    // Users can read invites they created
    // Users can update/delete invites they created
    match /userInvites/{inviteId} {
      allow read: if request.auth != null && 
                     resource.data.invitedBy == request.auth.uid;
      allow create: if request.auth != null && 
                       request.resource.data.invitedBy == request.auth.uid;
      allow update, delete: if request.auth != null && 
                                resource.data.invitedBy == request.auth.uid;
    }

    // Employees Collection
    // Users can read/create/update/delete employees where they are the employer
    // Organization members with appropriate permissions can also access
    match /employees/{employeeId} {
      allow read: if request.auth != null && 
                     (isOwner(resource.data.employerId) || 
                      (resource.data.organizationId != null && 
                       isOrganizationMember(resource.data.organizationId) &&
                       hasRolePermission('read')));
      allow create: if request.auth != null && 
                       (isOwner(request.resource.data.employerId) || 
                        (request.resource.data.organizationId != null && 
                         isOrganizationMember(request.resource.data.organizationId) &&
                         hasRolePermission('create')));
      allow update: if request.auth != null && 
                       (isOwner(resource.data.employerId) || 
                        (resource.data.organizationId != null && 
                         isOrganizationMember(resource.data.organizationId) &&
                         hasRolePermission('update')));
      allow delete: if request.auth != null && 
                       (isOwner(resource.data.employerId) || 
                        (resource.data.organizationId != null && 
                         isOrganizationMember(resource.data.organizationId) &&
                         hasRolePermission('delete')));
    }

    // Configuration Collection (for service pricing and other config)
    // All authenticated users can read configuration
    // Only admins can write (if needed in future)
    match /configuration/{configId} {
      allow read: if request.auth != null;
      allow write: if false; // Configuration is managed server-side only
    }

    // Form 16 Documents Collection
    // Users can read/create/update/delete Form 16 documents they created
    // Organization members with appropriate permissions can also access
    match /form16Documents/{docId} {
      allow read: if request.auth != null && 
                     (isOwner(resource.data.userId) || 
                      (resource.data.organizationId != null && 
                       isOrganizationMember(resource.data.organizationId) &&
                       hasRolePermission('read')));
      allow create: if request.auth != null && 
                       (isOwner(request.resource.data.userId) || 
                        (request.resource.data.organizationId != null && 
                         isOrganizationMember(request.resource.data.organizationId) &&
                         hasRolePermission('create')));
      allow update: if request.auth != null && 
                       (isOwner(resource.data.userId) || 
                        (resource.data.organizationId != null && 
                         isOrganizationMember(resource.data.organizationId) &&
                         hasRolePermission('update')));
      allow delete: if request.auth != null && 
                       (isOwner(resource.data.userId) || 
                        (resource.data.organizationId != null && 
                         isOrganizationMember(resource.data.organizationId) &&
                         hasRolePermission('delete')));
    }

    // Compliance Associates Collection
    // Users can create their own associate registration
    // Users can read their own associate registration (by email match)
    // Admins can read/update all associate registrations
    match /compliance_associates/{associateId} {
      // Helper function to safely get user email
      function getUserEmail() {
        let userData = getUserData();
        return userData != null && userData.email != null ? userData.email : '';
      }
      
      allow read: if request.auth != null && 
                     (resource.data.email == getUserEmail() ||
                      isAdmin() ||
                      request.auth.uid == 'SUPER_ADMIN_UID');
      // Allow any authenticated user to create - client-side validates email match
      // The client code ensures the email in the document matches the logged-in user's email
      allow create: if request.auth != null;
      allow update: if request.auth != null && 
                       (isAdmin() ||
                        request.auth.uid == 'SUPER_ADMIN_UID' ||
                        (resource.data.email == getUserEmail() && 
                         request.resource.data.email == getUserEmail()));
      allow delete: if request.auth != null && 
                       (isAdmin() || request.auth.uid == 'SUPER_ADMIN_UID');
    }

    // Associate Audit Logs Collection
    // Users can read audit logs for their own associate registration
    // Admins can read all audit logs
    // System can create audit logs
    match /associate_audit_logs/{logId} {
      allow read: if request.auth != null && 
                     (isAdmin() ||
                      request.auth.uid == 'SUPER_ADMIN_UID' ||
                      (resource.data.associateId != null && 
                       exists(/databases/$(database)/documents/compliance_associates/$(resource.data.associateId)) &&
                       get(/databases/$(database)/documents/compliance_associates/$(resource.data.associateId)).data.email == getUserData().email));
      allow create: if request.auth != null; // System creates logs via server-side
      allow update, delete: if request.auth != null && 
                                (isAdmin() || request.auth.uid == 'SUPER_ADMIN_UID');
    }

    // ITR Applications Collection
    // Users can read/create/update their own ITR applications
    // Professionals can read applications assigned to them
    // Admins can read all applications
    match /itrApplications/{applicationId} {
      allow read: if request.auth != null && 
                     (isOwner(resource.data.userId) ||
                      resource.data.assignedTo == request.auth.uid ||
                      isAdmin() ||
                      request.auth.uid == 'SUPER_ADMIN_UID');
      allow create: if request.auth != null && 
                       request.resource.data.userId == request.auth.uid;
      allow update: if request.auth != null && 
                       (isOwner(resource.data.userId) ||
                        resource.data.assignedTo == request.auth.uid ||
                        isAdmin() ||
                        request.auth.uid == 'SUPER_ADMIN_UID');
      allow delete: if request.auth != null && 
                       (isOwner(resource.data.userId) ||
                        isAdmin() ||
                        request.auth.uid == 'SUPER_ADMIN_UID');
    }

    // Compliance Subscriptions Collection
    // Users can read/create/update their own compliance subscriptions
    // Admins can read all subscriptions
    match /compliance_subscriptions/{subscriptionId} {
      allow read: if request.auth != null && 
                     (isOwner(resource.data.userId) ||
                      isAdmin() ||
                      request.auth.uid == 'SUPER_ADMIN_UID');
      allow create: if request.auth != null && 
                       request.resource.data.userId == request.auth.uid;
      allow update: if request.auth != null && 
                       (isOwner(resource.data.userId) ||
                        isAdmin() ||
                        request.auth.uid == 'SUPER_ADMIN_UID');
      allow delete: if request.auth != null && 
                       (isOwner(resource.data.userId) ||
                        isAdmin() ||
                        request.auth.uid == 'SUPER_ADMIN_UID');
    }

    // Compliance Task Executions Collection
    // Users can read task executions for their own subscriptions
    // Admins can read all task executions
    match /compliance_task_executions/{executionId} {
      allow read: if request.auth != null && 
                     (resource.data.userId == request.auth.uid ||
                      isAdmin() ||
                      request.auth.uid == 'SUPER_ADMIN_UID');
      allow create: if request.auth != null; // System creates executions
      allow update: if request.auth != null && 
                       (resource.data.userId == request.auth.uid ||
                        isAdmin() ||
                        request.auth.uid == 'SUPER_ADMIN_UID');
      allow delete: if request.auth != null && 
                       (isAdmin() || request.auth.uid == 'SUPER_ADMIN_UID');
    }

    // Compliance Audit Logs Collection
    // Users can read audit logs for their own subscriptions
    // Admins can read all audit logs
    match /compliance_audit_logs/{logId} {
      allow read: if request.auth != null && 
                     (resource.data.userId == request.auth.uid ||
                      isAdmin() ||
                      request.auth.uid == 'SUPER_ADMIN_UID');
      allow create: if request.auth != null; // System creates logs
      allow update, delete: if request.auth != null && 
                                (isAdmin() || request.auth.uid == 'SUPER_ADMIN_UID');
    }
  }
}
