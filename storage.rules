rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow read access to all files
    match /{allPaths=**} {
      allow read;
    }

    // Allow write access for authenticated users to blog-images folder
    match /blog-images/{allPaths=**} {
      allow write: if request.auth != null;
      allow read;
    }

    // Document Vault Storage - Owner access
    match /vault/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow write access for authenticated users to all other folders (for future use)
    match /{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
